<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yourdomainname.hariken.Hariken_UI_07_choose_photo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <Button
            android:id="@+id/take_pictureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_solid_border"
            android:drawablePadding="-8dp"
            android:drawableTop="@drawable/asset14ldpi"
            android:paddingTop="25dp"
            android:text="Take a Picture"
            android:textColor="#F05228"/>
        <Button
            android:id="@+id/chose_pictureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_dotted_border"
            android:drawablePadding="-8dp"
            android:drawableTop="@drawable/asset15ldpi"
            android:paddingTop="25dp"
            android:text="Choose from photos" />
        <TextView
            android:paddingTop="20dp"
            android:id="@+id/notNowtxt"
            android:text="NOT NOW"
            android:clickable="true"
            android:textColor="#F25A13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

</RelativeLayout>
